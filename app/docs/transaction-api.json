{
    "openapi": "3.0.3",
    "info": {
        "title": "Transaction API documentation",
        "description": "Transaction API documentation",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https"
        }
    ],
    "paths": {
        "/api/transactions": {
            "get": {
                "description": "Get all transactions",
                "parameters": [
                    {
                        "name": "status",
                        "in": "query",
                        "required": false,
                        "allowEmptyValue": true,
                        "description": "determine whether response is completed transaction or not. value = completed, uncompleted, empty for all",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "timeframe",
                        "in": "query",
                        "required": false,
                        "allowEmptyValue": true,
                        "description": "determine whether timeframe response is weekly or monthly. value = weekly, monthly, empty for all",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "paginate",
                        "in": "query",
                        "required": false,
                        "allowEmptyValue": true,
                        "description": "determine whether response is paginated or not. value = true or false",
                        "schema": {
                            "type": "string"
                        }
                    }


                ],
                "responses": {
                    "200": {
                        "description": "Success to get paginated transactions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "invoice_number": {
                                                    "type": "string"
                                                },
                                                "amount": {
                                                    "type": "integer"
                                                },
                                                "description": {
                                                    "type": "string"
                                                },
                                                "donation_type": {
                                                    "type": "string"
                                                },
                                                "donor": {
                                                    "type": "object",
                                                    "properties": {
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "phone_number": {
                                                            "type": "string"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "pattern": "email"
                                                        },
                                                        "donorable_type": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "wallet": {
                                                    "type": "string"
                                                },
                                                "good_type": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "links": {
                                            "type": "object",
                                            "properties": {
                                                "first": {
                                                    "type": "string"
                                                },
                                                "last": {
                                                    "type": "string"
                                                },
                                                "prev": {
                                                    "type": "string"
                                                },
                                                "next": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "meta": {
                                            "type": "object",
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer"
                                                },
                                                "from": {
                                                    "type": "integer"
                                                },
                                                "last_page": {
                                                    "type": "integer"
                                                },
                                                "links": {
                                                    "type": "object"
                                                },
                                                "path": {
                                                    "type": "string"
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "to": {
                                                    "type": "integer"
                                                },
                                                "total": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Success to get all transactions without pagination",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "amount": {
                                            "type": "integer"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "donation_type": {
                                            "type": "string"
                                        },
                                        "donor": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string"
                                                },
                                                "phone_number": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "pattern": "email"
                                                },
                                                "donorable_type": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "wallet": {
                                            "type": "string"
                                        },
                                        "good_type": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }

                }
            }
        },
        "/api/transactions/create": {
            "post": {
                "description": "Create Transaction",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "Resident Transaction": {
                                    "value": {
                                        "donorType": 1,
                                        "no_kk": "A13",
                                        "amount": 200000,
                                        "description_transaction": "Pemberian Infaq",
                                        "donation_types_id": 4,
                                        "good_types_id": 2,
                                        "name" : "Husni Robani",
                                        "phone_number": "082119802202",
                                        "email": "husnir2005@gmail.com",
                                        "description_guest": null
                                    }
                                },
                                "Guest Transaction": {
                                    "value": {
                                        "donorType": 1,
                                        "no_kk": null,
                                        "amount": 200000,
                                        "description_transaction": "Pembayaran zakat untuk 4 orang",
                                        "donation_types_id": 4,
                                        "good_types_id": 2,
                                        "name" : "Husni Robani",
                                        "phone_number": "082119802202",
                                        "email": "husnir2005@gmail.com",
                                        "description_guest": "Udin adiknya bu Ina"
                                    }
                                }

                            },
                            "schema": {
                                "required": ["donorType","name", "amount", "donation_types_id", "good_types_id", "email"],
                                "type": "object",
                                "properties": {
                                    "donorType": {
                                        "type": "number",
                                        "pattern": "enum",
                                        "description": "donor type : 1 = Resident, 2 = Guest"
                                    },
                                    "house_number": {
                                        "type": "string",
                                        "description": "required if donorType is 1"
                                    },
                                    "amount": {
                                        "type": "integer"
                                    },
                                    "description_transaction": {
                                        "type": "string"
                                    },
                                    "donation_types_id": {
                                        "type": "integer",
                                        "pattern": "id",
                                        "description": "donation type 1 = Fitrah, 2 = Mal, 3 = Fidyah, 4 = Sedekah"
                                    },
                                    "good_types_id": {
                                        "type": "integer",
                                        "pattern": "id",
                                        "description": "good type 1 = Beras, 2 = Uang"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "phone_number": {
                                        "type": "string",
                                        "pattern": "phone"
                                    },
                                    "email": {
                                        "type": "string",
                                        "pattern": "email"
                                    },
                                    "description_guest": {
                                        "type": "string",
                                        "description": "only if donorType is 2"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "success to create guest transaction",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "invoice_number": {
                                                    "type": "string"
                                                },
                                                "amount": {
                                                    "type": "integer"
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "nullable": true
                                                },
                                                "donation_type": {
                                                    "type": "string"
                                                },
                                                "donor": {
                                                    "type": "object",
                                                    "properties": {
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "phone_number": {
                                                            "type": "string"
                                                        },
                                                        "email": {
                                                            "type": "string"
                                                        },
                                                        "donorable_type": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "wallet": {
                                                    "type": "string"
                                                },
                                                "good_type": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/transactions/completed/{invoice_number}": {
            "post": {
                "description": "make transaction status completed true",
                "parameters": [
                    {
                        "name": "invoice_number",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "pattern": "id"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "success to make transaction completed status to true",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
