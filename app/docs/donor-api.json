{
    "openapi": "3.0.3",
    "info": {
        "title": "Donor API documentation",
        "description": "Donor API documentation",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https"
        }
    ],
    "paths": {
        "/api/donors": {
            "get": {
                "description": "Get all donors",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "required": false,
                        "description": "determine whether response is only guest, resident, or both. value = guest, resident",
                        "schema": {
                            "type": "string",
                            "default": false
                        }
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "required": false,
                        "description": "put the keyword weather name or house_number",
                        "schema": {
                            "type": "string",
                            "default": false
                        }
                    },

                    {
                        "name": "paginated",
                        "in": "query",
                        "required": false,
                        "description": "determine whether response should paginated or not. value is how much data should include in one page, for example 10",
                        "schema": {
                            "type": "integer",
                            "default": false
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success to get all donors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string"
                                                },
                                                "phone_number": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "pattern": "email"
                                                },
                                                "donorable_type": {
                                                    "type": "string"
                                                }
                                            }                                        },
                                        "links": {
                                            "type": "object",
                                            "properties": {
                                                "first": {
                                                    "type": "string"
                                                },
                                                "last": {
                                                    "type": "string"
                                                },
                                                "prev": {
                                                    "type": "string"
                                                },
                                                "next": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "meta": {
                                            "type": "object",
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer"
                                                },
                                                "from": {
                                                    "type": "integer"
                                                },
                                                "last_page": {
                                                    "type": "integer"
                                                },
                                                "links": {
                                                    "type": "object"
                                                },
                                                "path": {
                                                    "type": "string"
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "to": {
                                                    "type": "integer"
                                                },
                                                "total": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Success to get all donors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string"
                                                },
                                                "phone_number": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "pattern": "email"
                                                },
                                                "donorable_type": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }

                }
            }
        }
    }
}
